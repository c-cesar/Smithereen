{# @pebvariable name="userPermissions" type="smithereen.model.UserPermissions" #}
<div class="tabbar">
	{% if userPermissions.hasPermission('MANAGE_USERS') %}
	<a href="/users/{{ user.id }}/meminfo" class="{{ tab=='info' ? 'selected' : '' }}">{{ L('admin_manage_user') }}</a>
	<a href="/users/{{ user.id }}/staffNotes" class="{{ tab=='staffNotes' ? 'selected' : '' }}">{{ L('admin_user_staff_notes') }}{% if staffNoteCount>0 %} (<b>{{ staffNoteCount | numberformat }}</b>){% endif %}</a>
	<a href="/users/{{ user.id }}/meminfo/content" class="{{ tab=='content' ? 'selected' : '' }}">{{ L('admin_report_content') }}</a>
	{% endif %}
	{% if userPermissions.hasPermission('MANAGE_REPORTS') %}
	<a href="/users/{{ user.id }}/reports" class="{{ tab=='reports' ? 'selected' : '' }}">{{ L('menu_reports') }}</a>
	{% endif %}
	{% if userPermissions.hasPermission('VIEW_SERVER_AUDIT_LOG') %}
	<a href="/settings/admin/auditLog?uid={{ user.id }}" class="{{ tab=='auditLog' ? 'selected' : '' }}">{{ L('admin_audit_log') }}</a>
	{% endif %}
</div>