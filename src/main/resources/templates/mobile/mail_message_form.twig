{% set id=id | default("mailMessage") %}
<div class="wallPostForm nonCollapsible mailMessageForm" id="wallPostForm_{{id}}" data-unique-id="{{id}}" data-photo-upload-url="/system/upload/messagePhoto">
	<textarea name="text" id="postFormText_{{id}}" cols="100" rows="3" maxlength="65000" class="keepBorder"></textarea>
	<input type="hidden" name="csrf" value="{{csrf}}"/>
	<div id="postFormAttachments_{{id}}"></div>
	<input type="hidden" name="attachments"/>
	<div class="bottomBar">
		<div class="left">
			<button id="postFormSubmit_{{ id }}">{{ L(sendButtonLabel | default('send')) }}</button>
		</div>
		<div class="center"></div>
		<div class="right">
			<a id="postFormAttachBtn_{{ id }}">{{ L('attach') }}</a>
		</div>
	</div>
</div>