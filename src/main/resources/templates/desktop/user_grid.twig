{% if items is not empty %}
{% if not hideSummary %}
<div class="summaryWrap">
	<div class="summary">{{ summary }}</div>
	{% include "pagination" %}
</div>
{% endif %}
<div class="userGrid">
	{% for id in items %}
	{% set actor=id>0 ? users[id] : groups[-id] %}
	<div class="userGridItem">
		{% if avatarPhotos contains id %}
		<div class="avaZoomableW">
			<a href="{{ profileURL(id) }}"{{ profileRel(actor) }}>{{ actor | pictureForAvatar('b') }}</a>
			<a href="{{ avatarPhotos[id].url }}" class="avaZoom ellipsize" data-pv="{{ json(avatarPvInfos[id]) }}" onclick="return openPhotoViewer(this)"><span class="icon"></span><span>{{ L('view_user_profile_photos') }}</span></a>
		</div>
		{% else %}
		<a href="{{ profileURL(id) }}"{{ profileRel(actor) }}>{{ actor | pictureForAvatar('b') }}</a>
		{% endif %}
		<a href="{{ profileURL(id) }}"{{ profileRel(actor) }}>
			<div class="name ellipsize">{{ actor | name }}</div>
		</a>
	</div>
	{% endfor %}
</div>
{% if not hideSummary %}
<div class="bottomSummaryWrap">{% include "pagination" %}</div>
{% endif %}
{% else %}
<div class="singleColumn">
	<div class="emptyState">
		{{ emptyMessage }}
	</div>
</div>
{% endif %}